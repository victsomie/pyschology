<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/sunrise0610"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="ke.co.appslab.www.pyschology.Home">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What worked you??"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:layout_margin="15dp"
            android:textColor="#00aeef"
            android:textSize="19sp"
            android:layout_marginLeft="2dip"/>-->

        <EditText android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:hint="Write and explain what worked for you. What helped you"
            android:lines="5"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:background="@color/rte"
            android:singleLine="false"
            android:padding="6dp"
            android:textColor="@color/white"
            android:inputType="textMultiLine"
            android:gravity="top|left"
            />



        <EditText android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cont"
            android:layout_marginTop="15dp"
            android:hint="Do you want us to contact you? Then write your email here (this is optional)"
            android:background="@color/rte"
            android:singleLine="false"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="6dp"
            android:textColor="@color/white"
            android:inputType="textMultiLine"
            android:gravity="top|left"
            />


    </LinearLayout>

</LinearLayout>
    <!--<android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_done_white_24dp" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_height="33dp"
            android:layout_width="0dp"
            android:background="#00aeef"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Back"
                android:id="@+id/back"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:drawableLeft="@drawable/ic_keyboard_arrow_right_white_24dp"
                android:layout_height="32dp" />
        </LinearLayout>
        <LinearLayout

            android:layout_height="33dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:text="Submit"
                android:id="@+id/submit"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:drawableRight="@drawable/ic_done_white_24dp"
                android:layout_height="32dp" />
        </LinearLayout>
</LinearLayout>
</FrameLayout>
