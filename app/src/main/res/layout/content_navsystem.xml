<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunrise0610"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ke.co.appslab.www.pyschology.Home"
    tools:showIn="@layout/app_bar_main">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/rte"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Reaction"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:textSize="19sp"
                android:layout_marginLeft="2dip"/>

            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reaction"
                android:hint="Write how you reacted to the situation, your behaviour, feeling and thoughts"
                android:lines="4"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/rte"
                android:singleLine="false"
                android:padding="6dp"
                android:textColor="@color/white"
                android:inputType="textMultiLine"
                android:gravity="top|left"
                />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/rte"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="1dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Are you under any medication?"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:layout_marginLeft="2dip"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:theme="@style/checkBoxStyle"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/med"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
</android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:id="@+id/ratemed"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/rte"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How helpful is the medication?"
                android:id="@+id/medquiz"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:textSize="19sp"
                android:layout_marginLeft="2dip"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"

                android:layout_marginBottom="15dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="45dp"
                        android:id="@+id/img1"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_favorite_border_white_2dp"
                        android:layout_height="45dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="45dp"
                        android:id="@+id/img2"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_favorite_border_white_2dp"
                        android:layout_height="45dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="45dp"
                        android:id="@+id/img3"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_favorite_border_white_2dp"
                        android:layout_height="45dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="45dp"
                        android:id="@+id/img4"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_favorite_border_white_2dp"
                        android:layout_height="45dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="45dp"
                        android:id="@+id/img5"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_favorite_border_white_2dp"
                        android:layout_height="45dp" />
                </RelativeLayout>
            </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cardother"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/rte"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="15dp"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="1dp">
            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/other_info"
                android:layout_marginTop="0dp"
                android:hint="Enter any other information here (this is optional)"
                android:background="@color/rte"
                android:singleLine="false"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:padding="6dp"
                android:textColor="@color/white"
                android:inputType="textMultiLine"
                android:gravity="top|left"

                />
            </android.support.v7.widget.CardView>


        </LinearLayout>

    </LinearLayout>
    <!--<android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_done_white_24dp" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="bottom|end"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_height="33dp"
            android:layout_width="0dp"
            android:background="#00aeef"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Back"
                android:id="@+id/back"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:drawableLeft="@drawable/ic_keyboard_arrow_right_white_24dp"
                android:layout_height="32dp" />
        </LinearLayout>
        <LinearLayout

            android:layout_height="33dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:text="Submit"
                android:id="@+id/submit"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:drawableRight="@drawable/ic_done_white_24dp"
                android:layout_height="32dp" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</ScrollView>
