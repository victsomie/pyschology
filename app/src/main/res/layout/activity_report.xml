<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunrise0610"

    tools:context="ke.co.appslab.www.pyschology.Report">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_height="33dp"
            android:layout_width="0dp"
            android:background="#00aeef"
            android:layout_weight="1"
            android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Back"
            android:id="@+id/back"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:drawableLeft="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:layout_height="32dp" />
        </LinearLayout>
    <LinearLayout

        android:layout_height="33dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:text="Submit"
            android:id="@+id/submit"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:drawableRight="@drawable/ic_done_white_24dp"
            android:layout_height="32dp" />
    </LinearLayout>
    </LinearLayout>


    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cont"
        android:layout_marginTop="20dp"
        android:hint="Please describe your problem or suggestion here"
        android:background="@color/rte"
        android:singleLine="false"
        android:lines="6"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="6dp"
        android:textColor="@color/white"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        />
</FrameLayout>
